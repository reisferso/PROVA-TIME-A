<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>ParametrosFilter</filter-name>
        <filter-class>br.com.fradetecnologia.filters.ParametrosFilter</filter-class>
        <init-param>
            <param-name>dominio</param-name>
            <param-value>localhost:8080</param-value>
        </init-param>
        <init-param>
            <param-name>subdir</param-name>
            <param-value>/SIAG</param-value>
        </init-param>
        <init-param>
            <param-name>semconexao</param-name>
            <param-value>/images/;/js/;/assets/;/favicon.ico;/sass/;/xml/</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>doFilter</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>ConexaoFilter</filter-name>
        <filter-class>br.com.siag.filters.ConexaoFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SegurancaFilter</filter-name>
        <filter-class>br.com.siag.filters.SegurancaFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ControllerFilter</filter-name>
        <filter-class>br.com.fradetecnologia.filters.ControllerFilter</filter-class>
        <init-param>
            <param-name>servlets</param-name>
            <param-value>/relatorio.pdf;/upload</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ParametrosFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ConexaoFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SegurancaFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ControllerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>br.com.fradetecnologia.servlets.ControllerServlet</servlet-class>
        <init-param>
            <param-name>ControllerPacote</param-name>
            <param-value>br.com.siag.controllers</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Relatorio</servlet-name>
        <servlet-class>br.com.fradetecnologia.servlets.Relatorio</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/ControllerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/erros/erro404.jsp</location>
    </error-page>
</web-app>
